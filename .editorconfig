# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.bat]
indent_style = tab
end_of_line = crlf

[*.js{,on}]
indent_size = 2

[Makefile]
indent_style = tab

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[.*rc]
indent_size = 2

[*.xml]
indent_size = 2

[*.y{,a}ml]
indent_size = 2
